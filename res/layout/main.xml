<ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Buy:"
                android:id="@+id/buy"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editFirst"
                android:layout_alignBottom="@+id/buy"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cost:"
                android:id="@+id/cost"
                android:layout_below="@+id/buy"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editSecond"
                android:layout_alignBottom="@+id/cost"
                android:layout_alignLeft="@+id/editFirst"
                android:layout_alignStart="@+id/editFirst"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sell:"
                android:id="@+id/sell"
                android:layout_below="@+id/cost"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editThird"
                android:layout_alignBottom="@+id/sell"
                android:layout_alignLeft="@+id/editSecond"
                android:layout_alignStart="@+id/editSecond"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Price:"
                android:id="@+id/price"
                android:layout_below="@+id/sell"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editFourth"
                android:layout_alignBottom="@+id/price"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Note: to optimize, fill the above fields then the final cost. This will tell you the best amount of BTC to buy."
                android:id="@+id/optimizeMessage"
                android:layout_alignTop="@+id/optimize"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/optimize"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:paddingBottom="5dp"/>

        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Optimize"
                android:id="@+id/optimize"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/editFourth"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:padding="5dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Buy:"
                android:id="@+id/buy2"
                android:layout_below="@+id/optimizeMessage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="19dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editFifth"
                android:layout_alignBottom="@+id/buy2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cost:"
                android:id="@+id/cost2"
                android:layout_below="@+id/buy2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editSixth"
                android:layout_alignBottom="@+id/cost2"
                android:layout_alignLeft="@+id/editFifth"
                android:layout_alignStart="@+id/editFifth"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:id="@+id/calculate"
                android:layout_below="@+id/editSixth"
                android:layout_centerHorizontal="true"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:padding="5dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/resultText"
                android:layout_below="@+id/calculate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"/>
    </RelativeLayout>
</ScrollView>
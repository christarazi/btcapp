<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="@dimen/_20sdp"
    android:paddingRight="@dimen/_15sdp"
    android:paddingLeft="@dimen/_5sdp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:paddingTop="@dimen/_5sdp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Bitcoins bought:"
                android:id="@+id/btcBoughtView"
                android:textSize="@dimen/_16sdp"
                android:paddingRight="@dimen/_30sdp"
                android:gravity="left|center_vertical|center_horizontal"
                android:layout_weight=".5" />

            <EditText
                android:layout_width="@dimen/_55sdp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/btcBought"
                android:editable="true"
                android:hint="BTC"
                android:textSize="@dimen/_12sdp"
                android:numeric="decimal"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="at"
                android:id="@+id/textView"
                android:padding="@dimen/_1sdp" />

            <EditText
                android:layout_width="@dimen/_55sdp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/btcBoughtPrice"
                android:editable="true"
                android:hint="$"
                android:textSize="@dimen/_12sdp"
                android:numeric="decimal"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                />

        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:layout_below="@id/linearLayout3"
        android:layout_alignLeft="@id/linearLayout3"
        android:paddingTop="@dimen/_5sdp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Bitcoins sold:"
                android:id="@+id/textView2"
                android:textSize="@dimen/_16sdp"
                android:paddingRight="@dimen/_30sdp"
                android:gravity="left|center_vertical|center_horizontal"
                android:layout_weight=".5" />

            <EditText
                android:layout_width="@dimen/_55sdp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/btcSold"
                android:editable="true"
                android:hint="BTC"
                android:textSize="@dimen/_12sdp"
                android:numeric="decimal"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="at"
                android:id="@+id/textView3"
                android:padding="@dimen/_1sdp" />

            <EditText
                android:layout_width="@dimen/_55sdp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/btcSoldPrice"
                android:editable="true"
                android:hint="$"
                android:textSize="@dimen/_12sdp"
                android:numeric="decimal"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                />
        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:layout_below="@id/linearLayout4"
        android:layout_alignLeft="@id/linearLayout4"
        android:paddingTop="@dimen/_5sdp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Bitcoin buy back price:"
                android:id="@+id/textView4"
                android:textSize="@dimen/_16sdp"
                android:paddingRight="@dimen/_30sdp"
                android:gravity="left|center_vertical|center_horizontal"
                android:layout_weight=".5" />

            <EditText
                android:layout_width="@dimen/_55sdp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/optimalBTCPrice"
                android:editable="true"
                android:hint="$"
                android:textSize="@dimen/_12sdp"
                android:numeric="decimal"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                />
        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:layout_below="@id/linearLayout5"
        android:layout_alignLeft="@id/linearLayout5"
        android:layout_marginTop="@dimen/_30sdp"
        android:paddingTop="@dimen/_5sdp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Amount of BTC to buy:"
                android:id="@+id/textView5"
                android:textSize="@dimen/_16sdp"
                android:paddingRight="@dimen/_30sdp"
                android:gravity="left|center_vertical|center_horizontal"
                android:layout_weight=".5" />

            <EditText
                android:layout_width="@dimen/_55sdp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/optimalBTC"
                android:editable="true"
                android:hint="BTC"
                android:textSize="@dimen/_12sdp"
                android:numeric="decimal"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                />
        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout7"
        android:layout_below="@id/linearLayout6"
        android:layout_alignLeft="@id/linearLayout6"
        android:layout_marginTop="@dimen/_30sdp"
        android:paddingTop="@dimen/_5sdp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:id="@+id/buttonCalculate"
                android:gravity="center_vertical|center_horizontal" />
        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout8"
        android:layout_below="@id/linearLayout7"
        android:layout_alignLeft="@id/linearLayout7"
        android:layout_marginTop="@dimen/_30sdp"
        android:paddingTop="@dimen/_5sdp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/resultText" />
        </TableRow>
    </LinearLayout>


</RelativeLayout>